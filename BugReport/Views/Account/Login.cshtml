@using BugReport.Models.Account
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="account-container">
    <div class="account-card">
        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center mb-4 text-center text-sm-start">
            <div class="title-text mb-3 mb-sm-0">STUDENT <br /> ERROR REPORTING</div>
            <img src="~/img/logo.svg" alt="Illustration" class="img-fluid" style="max-height:120px;" />
        </div>

        <hr />

        <h4 class="mb-4 fw-bold">LOGIN</h4>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-bold"></label>
                <input asp-for="UserName" class="form-control"
                       maxlength="6" oninput="this.value = this.value.toUpperCase()" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="float-end">
                <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">
                    Forgot password?
                </a>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(x => x.RememberMe)
                </label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="submit" value="Login" class="btn btn-dark-blue w-100 p-2" />
            <div>
                <p class="text-center mt-2">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}