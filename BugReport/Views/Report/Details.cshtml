@using BugReport.Models.Report
@using BugReport.Entities
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject UserManager<User> userManager
@inject IViewLocalizer localizer
@model ReportViewModel

@{
    ViewData["Title"] = Model.Report.Title;
    bool isReporter = Model.Report.Reporter.Id == userManager.GetUserId(User);
    bool isAssignee = Model.Report.Assignees.Any(a => a.Id == userManager.GetUserId(User));
}

<div class="main-card">

    <div class="d-flex justify-content-between align-items-start flex-column flex-md-row mb-4">
        <div>
            <h3 class="fw-bold mb-1">@Model.Report.Title</h3>

            @if (Model.LatestChangeLog?.Status is Status status)
            {
                <span class="badge @GetStatusBadgeClass(status.NormalizedName)">
                    @GetLocalizedStatusName(status.Name, localizer)
                </span>
            }
        </div>

        @if (isReporter)
        {
            <div class="d-flex gap-2 mt-3 mt-md-0">
                <a class="btn btn-dark-blue btn-sm" asp-action="Edit" asp-route-id="@Model.Report.Id">@localizer["edit"]</a>
                <button class="btn btn-outline-red btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">@localizer["delete"]</button>
            </div>
        }
        @if (isAssignee || User.IsInRole("Admin"))
        {
            <form asp-action="ChangeStatus" method="post" class="mt-3 d-flex gap-2">
                @Html.AntiForgeryToken()

                <input type="hidden" name="reportId" value="@Model.Report.Id" />

                <select name="statusId" class="form-select w-auto">
                    @foreach (var status in ViewBag.Statuses)
                    {
                        <option value="@status.Id"
                                selected="@(Model.LatestChangeLog?.Status?.Id == status.Id)">
                            @GetLocalizedStatusName(status.Name, localizer)
                        </option>
                    }
                </select>

                <button class="btn btn-dark-blue">
                    @localizer["update-status"]
                </button>
            </form>
        }



    </div>


    <!-- ===================== DETAILS ===================== -->
    <div class="modern-card">
        <div class="card-header-modern">@localizer["details"]</div>

        <div class="card-body-modern small text-muted">
            <div><strong>@localizer["created-by"]:</strong> @Model.Report.Reporter.FirstName @Model.Report.Reporter.LastName</div>
            <div><strong>@localizer["assigned-to"]:</strong> @string.Join(", ", Model.Report.Assignees.Select(a => $"{a.FirstName} {a.LastName}"))</div>
            <div><strong>@localizer["created"]:</strong> @Model.Report.CreatedAt.ToString("g")</div>
            <div><strong>@localizer["modified"]:</strong> <span id="modifiedTimestamp">@Model.LatestChangeLog?.Timestamp.ToString("g")</span></div>
        </div>
    </div>


    <!-- ===================== DESCRIPTION ===================== -->
    <div class="modern-card">
        <div class="card-header-modern">@localizer["description"]</div>

        <div class="card-body-modern text-muted">
            @Html.Raw(Model.Report.Description.Replace("\n", "<br/>"))
        </div>
    </div>


    <!-- ===================== ATTACHMENTS ===================== -->
    <div class="modern-card">
        <div class="card-header-modern d-flex justify-content-between">
            <span>@localizer["attachments"]</span>
            <span class="badge bg-secondary">@Model.Report.Attachments?.Count()</span>
        </div>

        <div class="card-body-modern">
            @if (Model.Report.Attachments?.Any() ?? false)
            {
                <div class="row g-3">
                    @foreach (var att in Model.Report.Attachments)
                    {
                        var ext = System.IO.Path.GetExtension(att.FileName).ToLower();
                        var isImg = new[] { ".png", ".jpg", ".jpeg", ".gif", ".webp" }.Contains(ext);
                        var rel = $"/uploads/reports/{Model.Report.Id}/{att.FileName}";

                        <div class="col-6 col-md-3">
                            <div class="attachment-card">

                                <div class="attachment-thumb">
                                    @if (isImg)
                                    {
                                        <img src="@rel"
                                             data-src="@rel"
                                             data-caption="@att.UploadedAt.ToString("g")"
                                             class="attachment-image" />
                                    }
                                    else
                                    {
                                        <div class="file-icon">@GetFileIcon(ext)</div>
                                    }
                                </div>

                                <div class="attachment-name">@att.FileName</div>

                                <a href="@rel" download class="btn btn-outline-primary btn-sm w-100 mt-2">
                                    @localizer["download"]
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">@localizer["no-attachments"]</p>
            }
        </div>
    </div>


    <!-- ===================== MESSAGES ===================== -->
    <div class="modern-card">
        <div class="card-header-modern d-flex justify-content-between">
            <span>@localizer["messages"]</span>
            <span id="messagesBadge" class="badge bg-secondary">
                @Model.Report.Messages?.Count()
            </span>
        </div>

        <div class="card-body-modern">

            <div id="messageList">
                @if (Model.Report.Messages?.Any() ?? false)
                {
                    @foreach (var msg in Model.Report.Messages)
                    {
                        <div class="msg-item message-item">
                            <div class="msg-avatar">@msg.User.FirstName[0]@msg.User.LastName[0]</div>

                            <div class="msg-bubble">
                                <div class="d-flex justify-content-between small text-muted mb-1">
                                    <strong>@msg.User.FirstName @msg.User.LastName</strong>
                                    <span>@msg.TimeStamp.ToString("g")</span>
                                </div>
                                @msg.Text
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p id="noMessagesText" class="text-muted">@localizer["no-messages"]</p>
                }
            </div>

            <!-- POST MESSAGE -->
            <form id="messageForm" asp-action="Message" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ReportId" value="@Model.Report.Id" />

                <textarea name="Text" class="form-control mb-2" rows="2" placeholder="@localizer["add-a-message"]" style="resize:none;"></textarea>

                <button class="btn btn-dark-blue">@localizer["post-message"]</button>
            </form>

        </div>
    </div>

    <button class="btn btn-outline-dark-blue w-100" data-bs-toggle="modal" data-bs-target="#activityModal">
        @localizer["view-activity"]
    </button>
</div>


<!-- ===================== DELETE MODAL ===================== -->
<div class="modal fade" id="deleteModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="fw-bold">@localizer["confirm-delete"]</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p>@localizer["delete-text"]</p>

                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-outline-dark-blue" data-bs-dismiss="modal">@localizer["cancel"]</button>

                    <form asp-action="Delete" asp-route-id="@Model.Report.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-outline-red">@localizer["delete"]</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


<!-- ===================== IMAGE GALLERY MODAL ===================== -->
<div class="modal fade" id="imageGalleryModal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">

            <button class="btn-close btn-close-white ms-auto m-2" data-bs-dismiss="modal"></button>

            <div class="modal-body text-center">

                <button id="galleryPrev"
                        class="btn btn-light position-absolute top-50 start-0 translate-middle-y">
                    ❮
                </button>

                <img id="galleryImage" class="img-fluid" />

                <div id="galleryCaption" class="mt-2 small"></div>

                <button id="galleryNext"
                        class="btn btn-light position-absolute top-50 end-0 translate-middle-y">
                    ❯
                </button>

            </div>
        </div>
    </div>
</div>


<!-- ===================== ACTIVITY MODAL ===================== -->
<div class="modal fade" id="activityModal">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="fw-bold">@localizer["activity"]</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                @{
                    var timeline = Model.ChangeLogs
                    .Select(log => new
                    {
                        Time = log.Timestamp,
                        User = log.User,
                        Text = log.ChangeDescription,
                        Stat = log.Status
                    })
                    .OrderBy(t => t.Time)
                    .ToList();
                }

                @if (!timeline.Any())
                {
                    <p class="text-muted text-center">@localizer["no-activity"]</p>
                }
                else
                {
                    <div id="activityFeed">
                        @foreach (var t in timeline)
                        {
                            <div class="activity-entry">
                                <div class="activity-avatar">@t.User.FirstName[0]@t.User.LastName[0]</div>

                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <strong>@t.User.FirstName @t.User.LastName</strong>
                                        <span class="text-muted">@t.Time.ToString("g")</span>
                                    </div>

                                    <div class="activity-box">
                                        @GetLocalizedActivity(t.Text, localizer)
                                        <span class="badge float-end @GetStatusBadgeClass(t.Stat.NormalizedName)">
                                            @GetLocalizedStatusName(t.Stat.Name, localizer)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<!-- ===================== HELPERS ===================== -->
@functions {
    public string GetStatusBadgeClass(string normalizedStatus) => normalizedStatus?.ToUpper() switch
    {
        "RESOLVED" => "bg-success",
        "REJECTED" => "bg-danger",
        "BLOCKED" => "bg-warning",
        _ => "bg-dark"
    };

    public string GetLocalizedStatusName(string status, IViewLocalizer localizer)
    {
        return status switch
        {
            "Incoming" => localizer["status-incoming"].Value,
            "In progress" => localizer["status-in-progress"].Value,
            "Resolved" => localizer["status-resolved"].Value,
            "Rejected" => localizer["status-rejected"].Value,
            "Blocked" => localizer["status-blocked"].Value,
            _ => status
        };
    }

    public string GetLocalizedActivity(string activity, IViewLocalizer localizer)
    {
        return activity switch
        {
            "Created a new report." => localizer["report-created"].Value,
            "Changed the report's status." => localizer["report-status-changed"].Value,
            "Updated the report." => localizer["report-updated"].Value,
            "Added a new message." => localizer["report-message-added"].Value,
            _ => activity
        };
    }

    public string GetFileIcon(string ext) => ext switch
    {
        ".pdf" => "📕",
        ".doc" or ".docx" => "📘",
        ".xls" or ".xlsx" or ".csv" => "📗",
        ".ppt" or ".pptx" => "📙",
        ".txt" => "📄",
        ".zip" or ".rar" or ".7z" => "🗂️",
        _ => "📁"
    };
}


<!-- ===================== SCRIPTS ===================== -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {

            /* ---------------- IMAGE GALLERY ---------------- */
            const imgs = [...document.querySelectorAll(".attachment-image")];

            if (imgs.length) {
                const modal = new bootstrap.Modal("#imageGalleryModal");
                const img = document.getElementById("galleryImage");
                const cap = document.getElementById("galleryCaption");
                const prev = document.getElementById("galleryPrev");
                const next = document.getElementById("galleryNext");
                let index = 0;

                const show = () => {
                    img.src = imgs[index].dataset.src;
                    cap.textContent = imgs[index].dataset.caption;
                };

                imgs.forEach((el, i) => el.addEventListener("click", () => {
                    index = i;
                    show();
                    modal.show();
                }));

                prev.onclick = () => { index = (index - 1 + imgs.length) % imgs.length; show(); };
                next.onclick = () => { index = (index + 1) % imgs.length; show(); };
            }

            /* ---------------- POST MESSAGE ---------------- */
            const form = document.getElementById("messageForm");
            const list = document.getElementById("messageList");
            const badge = document.getElementById("messagesBadge");

            if (form) {
                form.addEventListener("submit", async e => {
                    e.preventDefault();
                    const data = new FormData(form);

                    const res = await fetch(form.action, {
                        method: "POST",
                        body: data,
                        headers: { "X-Requested-With": "XMLHttpRequest" }
                    });

                    if (!res.ok) {
                        alert("Failed to post message.");
                        return;
                    }

                    const json = await res.json();

                    list.insertAdjacentHTML("beforeend", `
                        <div class="msg-item message-item">
                            <div class="msg-avatar">${json.initials}</div>
                            <div class="msg-bubble">
                                <div class="d-flex justify-content-between small text-muted mb-1">
                                    <strong>${json.user}</strong>
                                    <span>${json.timestamp}</span>
                                </div>
                                ${json.text}
                            </div>
                        </div>
                    `);

                    const modified = document.getElementById("modifiedTimestamp");
                    if (modified) modified.textContent = json.timestamp;

                    const activity = document.getElementById("activityFeed");
                    if (activity) {
                        activity.insertAdjacentHTML("beforeend", `
                            <div class="activity-entry">
                                <div class="activity-avatar">${json.initials}</div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <strong>${json.user}</strong>
                                        <span class="text-muted">${json.timestamp}</span>
                                    </div>
                                    <div class="activity-box">${json.changeDescription}</div>
                                </div>
                            </div>
                        `);
                    }

                    form.reset();
                    badge.textContent = document.querySelectorAll(".message-item").length;

                    const emptyText = document.getElementById("noMessagesText");
                    if (emptyText) emptyText.remove();
                });
            }
        });

        document.getElementById("statusForm")?.addEventListener("submit", async (e) => {
            e.preventDefault();

            const form = e.target;
            const data = new FormData(form);

            const res = await fetch(form.action, {
                method: "POST",
                body: data,
                headers: { "X-Requested-With": "XMLHttpRequest" }
            });

            const json = await res.json();

            if (json.success) {
                document.getElementById("modifiedTimestamp").textContent = json.timestamp;

                const activity = document.getElementById("activityFeed");
                activity.insertAdjacentHTML("beforeend", `
                    <div class="activity-entry">
                        <div class="activity-avatar">${json.changeDescription[0]}</div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between small mb-1">
                                <strong>Status Update</strong>
                                <span class="text-muted">${json.timestamp}</span>
                            </div>
                            <div class="activity-box">${json.changeDescription}</div>
                        </div>
                    </div>
                `);
            }
        });
    </script>
}