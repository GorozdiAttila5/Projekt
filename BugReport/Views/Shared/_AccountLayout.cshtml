@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugReport.styles.css" asp-append-version="true" />
</head>
<body>

    <main role="main">
        <div class="account-container">
            <div class="account-card">
                <ul class="navbar-nav align-items-left">
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @(System.Globalization.CultureInfo.CurrentCulture.Name == "hu" ? "Magyar" : "English")
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="en">English</a></li>
                            <li><a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="hu">Magyar</a></li>
                        </ul>
                    </li>
                </ul>

                <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center mb-4 text-center text-sm-start">
                    <div class="title-text mb-3 mb-sm-0" style="text-transform: uppercase">@localizer["student"] <br /> @localizer["error-reporting"]</div>
                    <img src="~/img/logo.svg" alt="Illustration" class="img-fluid" style="max-height:120px;" />
                </div>

                <hr />

                @RenderBody()
            </div>
        </div>
    </main>

    <partial name="_ToastMenuPartial" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>