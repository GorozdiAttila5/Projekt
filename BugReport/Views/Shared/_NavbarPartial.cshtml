@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<header>
    <nav class="navbar navbar-expand-lg bg-white border-bottom px-3 shadow-sm">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#sidebar"
                    aria-controls="sidebar" aria-expanded="false" aria-label="Toggle sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="dropdown ms-auto">
                <button class="btn d-flex align-items-center dropdown-toggle" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="fw-semibold fs-5 me-2">@User.Identity?.Name</span>
                </button>

                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link text-danger p-0">@localizer["logout"]</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div id="sidebar" class="sidebar collapse">
    <div class="sidebar-header d-flex justify-content-between align-items-center p-3">
        <h5 class="mb-0">@localizer["menu"]</h5>
        <button class="btn btn-close" data-bs-toggle="collapse" data-bs-target="#sidebar"></button>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="p-3 align-content-center">
            <a class="nav-link text-dark d-block mb-2" asp-controller="Admin" asp-action="Index">@localizer["dashboard"]</a>
        </div>
    }

    @if (User.IsInRole("Student"))
    {
        <div class="p-3 align-content-center">
            <a class="nav-link text-dark d-block mb-2" asp-controller="Report" asp-action="Create">@localizer["new-report"]</a>
        </div>
    }

    <div class="p-3 align-content-center">
        <a class="nav-link text-dark d-block mb-2" asp-controller="Report" asp-action="Index">@localizer["report"]</a>
    </div>

    <div class="p-3 align-content-center">
        <a class="nav-link text-dark d-block mb-2" asp-controller="Report" asp-action="Archive">@localizer["archived-report"]</a>
    </div>

    <div class="language-selector mt-auto p-3">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @(System.Globalization.CultureInfo.CurrentCulture.Name == "hu" ? "Magyar" : "English")
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="en">English</a></li>
                    <li><a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="hu">Magyar</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>

<div id="sidebar-overlay" class="sidebar-overlay" data-bs-toggle="collapse" data-bs-target="#sidebar"></div>